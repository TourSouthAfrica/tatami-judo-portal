<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Judo Portal</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="<%= (typeof pageClass !== 'undefined' && pageClass) ? pageClass : '' %>">
  <header class="topbar">
    <a class="brand" href="<%= homeHref %>" aria-label="Home">
      <img src="/logo2.png" alt="Logo" class="brand-logo" />
    </a>

    <div class="topbar-actions">
      <% if (user) { %>
        <a class="btn btn-ghost" href="<%= homeHref %>">Home</a>

        <form method="post" action="/logout" style="display:inline;">
          <button class="btn btn-ghost" type="submit">Logout</button>
        </form>
      <% } %>
    </div>
  </header>

  <main class="wrap">
    <%- body %>
  </main>
</body>
</html>
